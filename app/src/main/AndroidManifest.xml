<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sagar.android_projects.ar_adl_rehab_mdss">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".singleton.AppSingleton"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Dashboard"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PatientDetailsTables"
            android:label="@string/title_activity_patient_details_tables"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PatientDetailsGraph"
            android:label="@string/title_activity_patient_details_graph"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DailyDetailReport"
            android:label="@string/title_activity_detail_report"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".TrainingFrequencyDetailReport"
            android:label="@string/title_activity_training_frequency_detail_report"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".GameComparisonDetailReport"
            android:label="@string/title_activity_game_comparison_detail_report"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".GraphViewDailyReportExpanded"
            android:label="@string/title_activity_graph_view_details"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".GraphViewTrainingFreqExpanded"
            android:label="@string/title_activity_graph_view_training_freq_expanded"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".EditUser"
            android:label="@string/title_activity_edit_user"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".GraphViewGameComparison"
            android:label="@string/title_activity_graph_view_game_comparison"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".GraphGameRepetitionExpanded"
            android:label="@string/title_activity_graph_game_repetition_expanded"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".GameRepetitionDetailReport"
            android:label="@string/title_activity_game_repetition_detail_report"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
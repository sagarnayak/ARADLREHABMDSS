<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sagar.android_projects.ar_adl_rehab_mdss.EditUser"
    tools:showIn="@layout/activity_edit_user">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_edit_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_message_to_user_heading_edit_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview_message_to_user_heading_edit_user" />

    <TextView
        android:id="@+id/textview_message_to_user_heading_edit_user"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:labelFor="@+id/edittext_message_to_user_edit_user"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:text="@string/message_to_patient"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/edittext_message_to_user_edit_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/edittext_message_to_user_edit_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_send_message_edit_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_send_message_edit_user"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="@string/send"
        android:textColor="@android:color/white"
        android:theme="@style/Theme.App.ButtonOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:foreground="?attr/selectableItemBackground"
                                        card_view:cardCornerRadius="2dp"
                                        card_view:cardElevation="1dp"
                                        card_view:cardUseCompatPadding="true"
                                        card_view:layout_constraintLeft_toLeftOf="parent"
                                        card_view:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/textview_game_name_edit_user_item"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textview_count_level_edit_user_item"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/count"
                app:layout_constraintTop_toBottomOf="@+id/textview_game_name_edit_user_item"/>

            <TextView
                android:id="@+id/textview_count_value_edit_user_item"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textview_game_name_edit_user_item"
                card_view:layout_constraintLeft_toRightOf="@+id/textview_count_level_edit_user_item"/>

            <TextView
                android:id="@+id/textview_time_level_edit_user_item"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                app:layout_constraintTop_toBottomOf="@+id/textview_count_level_edit_user_item"/>

            <TextView
                android:id="@+id/textview_time_value_edit_user_item"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textview_count_level_edit_user_item"
                card_view:layout_constraintLeft_toRightOf="@+id/textview_time_level_edit_user_item"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/appcompatiamgeview_down_arrow_edit_user_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="180"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/textview_count_level_edit_user_item"
                card_view:srcCompat="@drawable/up_arrow"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/appcompatiamgeview_up_arrow_edit_user_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                card_view:layout_constraintRight_toLeftOf="@+id/appcompatiamgeview_down_arrow_edit_user_item"
                card_view:layout_constraintTop_toBottomOf="@id/textview_count_level_edit_user_item"
                card_view:srcCompat="@drawable/up_arrow"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/appcompatiamgeview_edit_edit_user_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                card_view:layout_constraintRight_toLeftOf="@+id/appcompatiamgeview_up_arrow_edit_user_item"
                card_view:layout_constraintTop_toBottomOf="@id/textview_count_level_edit_user_item"
                card_view:srcCompat="@drawable/edit_colord"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>